<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green_light</item>
    </style>

    <style name="text_dimension">
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">130sp</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="image_dimension">
        <item name="android:layout_height">170dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#41C12A</item>

    </style>

    <style name="heading">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">#F306D3</item>
        <item name="android:gravity">center</item>
        <item name ="android:background">#FFFDAF</item>
    </style>

</resources>